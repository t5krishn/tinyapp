<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" style="position:relative;" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link p-3" href="/urls">My URLs</a>
        <a class="nav-item nav-link p-3" href="/urls/new">Create New URL</a>
      
        <% if (!username) { %>

        <form class="form-inline ml-auto pl-3" action="/login" style="position:absolute; right:0" method="POST">
          <div class="form-group nav-link clearfix">
            <label for="username" class="ml-1" style>Login:</label>
            <input class="form-control ml-1" type="text" name="username" placeholder="Username" style="width: 150px;">
            <button type="submit" class="btn btn-outline-dark ml-1">Sign in</button>
          </div>
        </form>

        <% } else { %>
          <form class="form-inline ml-auto pl-3" action="/logout" style="position:absolute; right:0" method="POST">
            <div class="form-group nav-link clearfix">
              <label for="logout" class="ml-1 text-dark" style>User: <%= username %></label>
              <button type="submit" name="logout" class="btn btn-outline-dark ml-1">Logout</button>
            </div>
          </form>
        <% } %>
   

      </div>
    </div>
  </nav>
</header>